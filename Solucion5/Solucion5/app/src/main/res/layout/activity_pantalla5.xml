<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.julio.solucion5.Pantalla5"
    android:id="@+id/pantalla5">

    <TextView android:text="RESULTADO" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvresultado"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banda Uno"
        android:id="@+id/textView"
        android:layout_below="@+id/txtvresultado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banda Dos"
        android:id="@+id/textView2"
        android:textSize="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banda Tres"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banda Cuatro"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:id="@+id/bandaUno"
        android:textSize="22dp"
        android:layout_alignRight="@+id/txtvresultado"
        android:layout_alignEnd="@+id/txtvresultado"
        android:layout_alignTop="@+id/textView"
        android:layout_above="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:id="@+id/bandaDos"
        android:textSize="22dp"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/bandaUno"
        android:layout_alignStart="@+id/bandaUno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:id="@+id/bandaTre"
        android:textSize="22dp"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/bandaDos"
        android:layout_alignStart="@+id/bandaDos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:id="@+id/bandaCua"
        android:textSize="22dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/bandaTre"
        android:layout_alignStart="@+id/bandaTre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:id="@+id/resultado1"
        android:textSize="22dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="102dp" />

</RelativeLayout>
